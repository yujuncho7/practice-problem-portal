<link rel = "stylesheet" type = "text/css" href = "login.css">

<div id = "wrapper">
<h1>Login</h1>


<%= form_tag '/instructors' do %>
  <p><%= text_field_tag :email, nil, placeholder: 'Email Address' %> </p>
  <p><%= password_field_tag :password, nil, placeholder: 'Password' %> </p>
  <p> <%= check_box_tag(:remember_me) %> Remember Me</p>
  <%= submit_tag "Submit" %>
<% end %>
</div>