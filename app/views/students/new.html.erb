<link rel = "stylesheet" type = "text/css" href = "login.css">

<div class = "login-container">
<h2>Signup</h2>

<%= flash[:notice] %>

<%= form_tag '/students' do %>
  <div><%= text_field_tag :email, nil, placeholder: 'Email Address', style:"height:25px" %> </div>
  <div><%= password_field_tag :password, nil, placeholder: 'Password', style:"height:25px" %> </div>
  <div><%= password_field_tag :password_confirmation, nil, placeholder: 'Confirm Password', style:"height:25px" %></div>
  <%= submit_tag "Submit", class: "btn btn-primary" %>
<% end %>
</div>
	
