<!DOCTYPE html>
<html>
<head>
  <title>Practiceproblemportal</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag "//cdn.datatables.net/plug-ings/f2c75b7247b/integration/bootstrap/3/dataTables.bootstrap.js" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "//cdn.datatables.net/plug-ings/f2c75b7247b/integration/bootstrap/3/dataTables.bootstrap.js" %>
</head>
<body>
    <%= nav_bar fixed: :top do %>
      <%= menu_group do %>
        <%= menu_item "CS61A Pratice Portal" %>
        <%= menu_item "Problems", problems_path %>
      <% end %>
      <%= menu_group pull: :right do %>

        <% if session[:user].nil? %>
          <%= menu_item "Sign Up", new_student_path %>
          <%= drop_down "Login" do %>
            <%= button_to "Instructor Login", login_instructors_path, class: "btn btn-primary btn-block " %>
            <%= button_to "Student Login", login_students_path, class: "btn btn-success btn-block" %>
          <% end %>
        <% else %>
          <%= menu_item "Logout", logout_application_index_path %>
        <% end %>

      <% end %>
    <% end %>
    <%= yield %>

</body>
</html>
